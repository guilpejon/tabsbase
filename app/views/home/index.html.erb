<div class="w-full pb-16">
  <div class="mb-8 px-4 sm:px-0">
    <h1 class="text-3xl font-semibold tracking-tight">Tabsbase</h1>
    <p class="text-slate-600 mt-2">Search tabs by artist, song title, or instrument.</p>

    <%= form_with url: root_path, method: :get, local: true, class: "mt-6 flex gap-3" do |f| %>
      <%= f.search_field :q,
        value: @query,
        placeholder: "e.g. Radiohead, Wonderwall, guitar…",
        class: "w-full rounded-md border border-slate-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-slate-400" %>

      <%= f.submit "Search",
        class: "rounded-md bg-slate-900 px-4 py-2 text-white hover:bg-slate-800" %>
    <% end %>
  </div>

  <div class="flex items-baseline justify-between gap-4 mb-3 px-4 sm:px-0">
    <h2 class="text-lg font-medium">
      <%= @query.present? ? "Results" : "Latest tabs" %>
    </h2>
    <p class="text-sm text-slate-600">
      <%= number_with_delimiter(@pagy.count) %> tabs
      <% if @pagy.pages > 1 %>
        • Page <%= @pagy.page %> of <%= @pagy.pages %>
      <% end %>
    </p>
  </div>

  <div class="divide-y divide-slate-200 sm:rounded-lg sm:border sm:border-slate-200 bg-white">
    <% if @tabs.any? %>
      <% @tabs.each do |tab| %>
        <div class="px-4 py-3 sm:p-4 hover:bg-slate-50">
          <div class="flex items-start justify-between gap-4">
            <div class="min-w-0">
              <%= link_to tab.display_name, tab_path(tab, q: @query), class: "block font-medium text-slate-900 truncate" %>
              <div class="mt-1 flex flex-wrap items-center gap-x-1 gap-y-1 text-sm text-slate-600">
                <span><%= tab.tuning.full_name %></span>
                <% if tab.difficulty.present? %>
                  <span class="hidden sm:inline">• <%= tab.difficulty %></span>
                <% end %>
                <% if tab.capo.present? %>
                  <span>• Capo <%= tab.capo %></span>
                <% end %>
                <span>• <%= number_with_delimiter(tab.views_count) %> views</span>
                <% if tab.rating.present? && !tab.rating.zero? %>
                  <span>• <%= tab.rating.to_f.round(2) %>/5 (<%= tab.rating_count %>)</span>
                <% end %>
              </div>
            </div>
            <div class="hidden sm:block shrink-0 text-sm text-slate-500">
              <%= tab.created_at.to_date %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="p-6 text-slate-600">
        No tabs found.
        <% if @query.present? %>
          Try a different search.
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mt-6 px-4 sm:px-0">
      <%= pagy_tailwind_nav(@pagy) %>
    </div>
  <% end %>
</div>
