<div class="w-full">
  <div class="mb-6">
    <%= link_to "← Back to search", root_path(q: params[:q]), class: "text-sm text-slate-600 hover:text-slate-900" %>

    <div class="mt-3 flex items-start justify-between gap-4">
      <div class="min-w-0">
        <h1 class="text-2xl font-semibold tracking-tight truncate"><%= @tab.display_name %></h1>
        <div class="mt-2 flex flex-wrap items-center gap-x-3 gap-y-1 text-sm text-slate-600">
          <span><%= @tab.tuning.full_name %></span>
          <% if @tab.difficulty.present? %>
            <span>• <%= @tab.difficulty %></span>
          <% end %>
          <% if @tab.capo.present? %>
            <span>• Capo <%= @tab.capo %></span>
          <% end %>
          <span>• <%= number_with_delimiter(@tab.views_count) %> views</span>
          <% if @tab.rating.present? %>
            <span>• <%= @tab.rating.to_f.round(2) %>/5</span>
          <% end %>
          <% if @tab.source_url.present? %>
            <span>• <%= link_to "Source", @tab.source_url, target: "_blank", rel: "noopener", class: "underline decoration-slate-300 hover:decoration-slate-600" %></span>
          <% end %>
        </div>
      </div>
      <div class="shrink-0 text-sm text-slate-500">
        <%= @tab.created_at.to_date %>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-slate-200 bg-white p-4">
    <%= render_ug_content(@tab.content) %>
  </div>
</div>


