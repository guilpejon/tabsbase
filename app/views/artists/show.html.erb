<% content_for(:title) { "#{@artist.name} Tabs - Tabsbase" } %>

<div class="w-full pb-16 max-w-6xl mx-auto px-4 sm:px-5">
  <div class="mb-8">
    <nav class="text-sm text-slate-500 mb-4">
      <%= link_to "Home", root_path, class: "hover:text-slate-900" %>
      <span class="mx-2">›</span>
      <% first_letter = @artist.name[0].upcase %>
      <% letter_param = first_letter.match?(/[A-Z]/) ? first_letter : "0-9" %>
      <%= link_to first_letter.match?(/[A-Z]/) ? first_letter : "#", artists_path(letter: letter_param), class: "hover:text-slate-900" %>
      <span class="mx-2">›</span>
      <span class="text-slate-900"><%= @artist.name %></span>
    </nav>

    <h1 class="text-3xl sm:text-4xl font-semibold tracking-tight text-slate-900"><%= @artist.name %></h1>
    <p class="text-slate-500 mt-2"><%= pluralize(@artist.tabs.count, "tab") %> available</p>
  </div>

  <% if @instruments.size > 1 || @tab_types.size > 1 || @versions.any? %>
    <%= form_with url: artist_path(@artist), method: :get, local: true, class: "mb-6" do |f| %>
      <div class="flex flex-wrap gap-3">
        <% if @instruments.size > 1 %>
          <%= f.select :instrument,
            options_for_select([["All instruments", ""]] + @instruments.map { |i| [i.titleize, i] }, @instrument),
            {},
            class: "rounded-md border border-slate-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-slate-400 bg-white text-sm" %>
        <% end %>

        <% if @tab_types.size > 1 %>
          <%= f.select :tab_type,
            options_for_select([["All types", ""]] + @tab_types.map { |t| [t.titleize, t] }, @tab_type),
            {},
            class: "rounded-md border border-slate-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-slate-400 bg-white text-sm" %>
        <% end %>

        <% if @versions.any? %>
          <%= f.select :version,
            options_for_select([["All versions", ""]] + @versions.map { |v| [v, v] }, @version),
            {},
            class: "rounded-md border border-slate-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-slate-400 bg-white text-sm" %>
        <% end %>

        <%= f.submit "Filter",
          class: "rounded-md bg-slate-900 px-4 py-2 text-white hover:bg-slate-800 text-sm cursor-pointer" %>

        <% if @instrument.present? || @tab_type.present? || @version.present? %>
          <%= link_to "Clear", artist_path(@artist), class: "rounded-md border border-slate-300 px-4 py-2 text-slate-600 hover:bg-slate-50 text-sm" %>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <div class="flex items-baseline justify-between gap-4 mb-3">
    <h2 class="text-lg font-medium">Tabs</h2>
    <p class="text-sm text-slate-600">
      <%= number_with_delimiter(@pagy.count) %> tabs
      <% if @pagy.pages > 1 %>
        • Page <%= @pagy.page %> of <%= @pagy.pages %>
      <% end %>
    </p>
  </div>

  <div class="bg-white sm:rounded-lg sm:border sm:border-slate-200 overflow-hidden">
    <!-- Artist Header -->
    <div class="px-4 py-3 sm:px-6 sm:py-4 bg-slate-50 border-b border-slate-200">
      <span class="text-lg font-semibold text-slate-900"><%= @artist.name %></span>
      <span class="text-sm text-slate-500 ml-2">
        (<%= @pagy.count %> tab<%= @pagy.count == 1 ? '' : 's' %>)
      </span>
    </div>

    <!-- Songs List -->
    <% if @tabs.any? %>
      <div class="divide-y divide-slate-200">
        <% @tabs.each do |tab| %>
          <div class="px-4 py-3 sm:px-6 sm:py-4 hover:bg-slate-50">
            <div class="flex items-center justify-between gap-4">
              <div class="min-w-0 flex-1">
                <%= link_to tab_path(artist_slug: @artist.slug, slug: tab.slug),
                    class: "font-medium text-slate-900 hover:text-slate-700 hover:underline block" do %>
                  <%= tab.song_title %>
                <% end %>
              </div>
              <div class="flex items-center gap-2 text-sm text-slate-500 shrink-0">
                <span class="px-2 py-1 bg-slate-100 rounded text-xs font-medium">
                  <%= tab.instrument.titleize %>
                </span>
                <% if tab.tab_type.present? && tab.tab_type != 'chords' %>
                  <span class="px-2 py-1 bg-slate-100 rounded text-xs font-medium">
                    <%= tab.tab_type_version %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-6 text-slate-600">
        No tabs found with the selected filters.
      </div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%= pagy_tailwind_nav(@pagy) %>
    </div>
  <% end %>
</div>

